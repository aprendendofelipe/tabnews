{
  "name": "@tabnews/ui",
  "version": "0.3.3",
  "description": "TabNews UI",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./document": {
      "import": "./dist/_document.js",
      "require": "./dist/_document.cjs"
    },
    "./primer": {
      "import": "./dist/primer.js",
      "require": "./dist/primer.cjs"
    },
    "./css": "./dist/ui.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "tn test",
    "test:run": "tn test run",
    "lint": "eslint . && prettier --check .",
    "format": "eslint --fix . && prettier --write .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@primer/octicons-react": "19.15.0",
    "@primer/react": "^37.12.0",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "next": "15.1.7",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "peerDependencies": {
    "next": ">=14.2.4",
    "react": ">=18.3.1",
    "react-dom": ">=18.2.0"
  },
  "author": "TabNews",
  "repository": {
    "type": "git",
    "url": "https://github.com/aprendendofelipe/tabnews",
    "directory": "packages/ui"
  },
  "keywords": [
    "tabnews",
    "ui"
  ],
  "publishConfig": {
    "access": "public"
  }
}
